<%- include('layout/header') %>

    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-4">
                <div class="card shadow">
                    <div class="card-header bg-success">
                        <h3 class="text-light">Edit User (<%= user.name %>)</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/update/<%= user._id %>" method="post" id="add-form"
                            enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" class="form-control" name="name" value="<%= user.name %>"
                                    placeholder="Enter name" required></input>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email address</label>
                                <input type="email" class="form-control" name="email" value="<%= user.email %>"
                                    placeholder="name@example.com" required>
                            </div>
                            <div class="mb-3">
                                <label for="phone" class="form-label">Phone</label>
                                <input type="tel" class="form-control" placeholder="Enter phone"
                                    value="<%= user.phone %>" name="phone" required></input>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Select Image</label>
                                <input class="form-control" type="file" name="image">
                                <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1">
                            </div>
                            <input type="hidden" name="old_image" value='<%= user.image %>'>
                            <div class="mb-3 d-grid">
                                <input type="submit" name="submit" value="Update User" class="btn btn-success btn-lg">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <%- include('layout/footer') %>