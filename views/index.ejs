<%- include('layout/header') %>

    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <strong>
                            <%= message.message %>
                        </strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
                    <div class="table-responsive">
                        <% if (users=="") { %>
                            <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
                        <% } else { %>
                            <table class="table table-striped text-center my-3">
                                <thead>
                                    <tr class="table-dark">
                                        <th>ID</th>
                                        <th>Image</th>
                                        <th>Name</th>
                                        <th>E-mail</th>
                                        <th>Phone</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach((user, i) => { %>
                                        <tr class="align-middle">
                                            <td><%= i+1 %></td>
                                            <td><img src="<%= user.image %>" width="50" class="img-thumbnail"/></td>
                                            <td><%= user.name %></td>
                                            <td><%= user.email %></td>
                                            <td><%= user.phone %></td>
                                            <td>
                                                <a class="text-success" href="/edit/<%= user._id %>"><i
                                                        class="fas fa-edit fa-lg mx-1"></i></a>
                                                <a class="text-danger" href="/delete/<%= user._id %>"><i
                                                        class="fas fa-trash fa-lg mx-1"></i></a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        <% } %>
                    </div>
            </div>
        </div>
    </div>

    <%- include('layout/footer') %>